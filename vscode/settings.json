{
    "workbench.colorTheme": "Dark-Dracula",
    "workbench.settings.editor": "json",
    "workbench.sideBar.location": "right",
    "workbench.list.openMode": "singleClick",
    "files.eol": "\n",
    "files.autoSave": "onFocusChange",
    // EDITOR
    // https://stackoverflow.com/questions/29972396/how-can-i-customize-the-tab-to-space-conversion-factor
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "editor.cursorSurroundingLines": 4,
    "editor.fontFamily": "MesloLGSDZ Nerd Font Mono",
    "editor.fontSize": 16,
    "editor.formatOnSave": false,
    "editor.formatOnPaste": true,
    "editor.formatOnSaveMode": "file",
    "[scss]": {
        "editor.formatOnSave": false
    },
    "[jinja-html]": {
        "editor.formatOnSave": true
    },
    "yaml.format.enable": true,
    "[yaml]": {
        "editor.formatOnSave": true,
    },
    // Avoid removing comments from Enhanced TOML Extension
    "[toml]": {
        "editor.formatOnSave": false,
    },
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll": "never",
    },
    // TERMINAL
    "terminal.integrated.fontSize": 14,
    // PYTHON
    // Black Formatting
    // "python.formatting.provider": "black",
    // Pylint
    //"python.linting.enabled": true,
    //"python.linting.pylintEnabled": true,
    //"python.linting.maxNumberOfProblems": 50,
    // Others
    // Mypy
    "python.linting.mypyEnabled": true,
    "python.linting.mypyArgs": [
        "--ignore-missing-imports",
        "--follow-imports=silent",
        "--show-column-numbers",
        "--allow-untyped-defs",
        "--allow-subclassing-any",
        "--allow-untyped-calls",
        "--strict"
    ],
    "ruff.importStrategy": "useBundled",
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            // "source.fixAll": "explicit"
            "source.organizeImports": "explicit"
        },
        "editor.inlayHints.enabled": "offUnlessPressed"
    },
    // Disabling PYLANCE
    // https://pypi.org/project/basedpyright/1.2.0/#:~:text=disable%20pylance's%20type%2Dchecking%20by,displayed%20by%20the%20basedpyright%20extension.
    "python.analysis.typeCheckingMode": "off",
    "intellicode.python.enabled": false, // Intellicode won't work if pylance is disabled
    // "basedpyright.disableLanguageServices": true,
    // VIM
    "vim.smartRelativeLine": true,
    "workbench.iconTheme": "containerlab-icons",
    "window.zoomLevel": 1,
    // Prettier
    "prettier.tabWidth": 4,
    "prettier.useTabs": true,
    "explorer.confirmDelete": false,
    "cSpell.userWords": [
        "danielmacuare",
        "Fastly",
        "netbox",
        "secho",
        "Typer",
        "webp"
    ],
    "redhat.telemetry.enabled": false,
    "ansible.validation.lint.enabled": false,
    "update.showReleaseNotes": false,
    // COPILOT
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false,
        "python": false
    },
    "workbench.editor.openSideBySideDirection":"right",
    "workbench.editor.openPositioning":"right",
    "github.copilot.chat.terminalChatLocation": "terminal",
    // GEMINI
    "geminicodeassist.updateChannel": "Insiders",
    "geminicodeassist.enableTelemetry": false,
    "workbench.secondarySideBar.defaultVisibility": "visible",
    "hediet.vscode-drawio.resizeImages": null,
    // CLAB - ORB Hypervisor
    "containerlab.remote.hostname": "containerlab-vm.orb.local",
    "github.copilot.nextEditSuggestions.enabled": true
}